    "components": {
        "schemas": {
            "BadRequest": {
                "description": "Bad request",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Bad request"
                    }
                },
                "type": "object"
            },
            "Forbidden": {
                "description": "Forbidden",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Forbidden"
                    }
                },
                "type": "object"
            },
            "NotFound": {
                "description": "La ressource n'existe pas",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "La ressource demandée n'a pas pu être trouvée"
                    }
                },
                "type": "object"
            },
            "Unauthenticated": {
                "description": "Unauthenticated",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Unauthenticated"
                    }
                },
                "type": "object"
            },
            "Unauthorized": {
                "description": "Unauthorized",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Unauthorized"
                    }
                },
                "type": "object"
            },
            "LoginRequest": {
                "properties": {
                    "email": {
                        "description": "Email address of the user",
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "description": "Password of the user",
                        "type": "string",
                        "format": "password"
                    }
                },
                "type": "object"
            },
            "RegisterRequest": {
                "properties": {
                    "username": {
                        "description": "Determine if the user is authorized to make this request.",
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "type": "string",
                        "example": "johndoe@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "password"
                    },
                    "password_confirmation": {
                        "type": "string",
                        "example": "password"
                    }
                },
                "type": "object"
            },
            "CreateReportRequest": {
                "required": [
                    "title",
                    "description",
                    "location",
                    "category"
                ],
                "properties": {
                    "title": {
                        "description": "Get the validation rules that apply to the request.",
                        "type": "string",
                        "example": "Report title"
                    },
                    "description": {
                        "type": "string",
                        "example": "Report description"
                    },
                    "location": {
                        "type": "array",
                        "items": {
                            "type": "number",
                            "format": "float"
                        },
                        "example": [
                            -6.175392,
                            106.827153
                        ]
                    },
                    "category": {
                        "type": "string",
                        "example": "Report category"
                    },
                    "medias": {
                        "description": "Report medias",
                        "type": "array",
                        "items": {
                            "type": "file",
                            "format": "binary"
                        }
                    }
                },
                "type": "object"
            },
            "UpdateReportRequest": {
                "properties": {
                    "title": {
                        "description": "Get the validation rules that apply to the request.",
                        "type": "string",
                        "example": "Report title"
                    },
                    "description": {
                        "type": "string",
                        "example": "Report description"
                    },
                    "location": {
                        "type": "string",
                        "example": "Report location"
                    },
                    "category": {
                        "type": "string",
                        "example": "Report category"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "apiKey",
                "description": "Enter token in format (Bearer <token>)",
                "name": "Authorization",
                "in": "header"
            }
